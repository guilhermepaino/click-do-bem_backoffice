@{

    ViewData["Title"] = "Pesquisar Doações/Necessidades";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string dataInicial = Model.DataInicial == null ? string.Empty : Model.DataInicial.Value.ToString("dd/MM/yyyy");
    string dataFinal = Model.DataFinal == null ? string.Empty : Model.DataFinal.Value.ToString("dd/MM/yyyy");

}

@model SantaHelena.ClickDoBem.BackOffice.Models.Itens.FiltroItensViewModel

<h2>Pesquisar Doações/Necessidades</h2>
<br />

<h4>Filtros</h4>

<!-- Bootstrap -->
<link rel="stylesheet" href="https://formden.com/static/cdn/bootstrap-iso.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.1/css/bootstrap-select.min.css">

<!-- DatePicker -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/css/bootstrap-datepicker3.css" />

<!-- Font-Awesome -->
<link rel="stylesheet" href="https://formden.com/static/cdn/font-awesome/4.4.0/css/font-awesome.min.css" />

<!-- Bootstrap -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.12.1/js/bootstrap-select.min.js"></script>

<!-- Formden -->
<script type="text/javascript" src="https://formden.com/static/cdn/formden.js"></script>

<!-- DatePicker -->
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.4.1/js/bootstrap-datepicker.min.js"></script>

<script language="JavaScript" src="https://cdn.datatables.net/1.10.4/js/jquery.dataTables.min.js" type="text/javascript"></script>
<script language="JavaScript" src="https://cdn.datatables.net/plug-ins/3cfcc339e89/integration/bootstrap/3/dataTables.bootstrap.js" type="text/javascript"></script>
<link rel="stylesheet" type="text/css" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="http://cdn.datatables.net/plug-ins/3cfcc339e89/integration/bootstrap/3/dataTables.bootstrap.css">

<style>
    .bootstrap-iso .formden_header h2, .bootstrap-iso .formden_header p, .bootstrap-iso form {
        font-family: Arial, Helvetica, sans-serif;
        color: black
    }

        .bootstrap-iso form button, .bootstrap-iso form button:hover {
            color: white !important;
        }

    .dropdown-picker-selected {
        color: black !important;
    }
</style>

<div class="bootstrap-iso">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6 col-sm-6 col-xs-12">
                <form asp-area="" asp-controller="Itens" asp-action="Filtrar" class="form-horizontal" method="post" autocomplete="off">

                    <div class="form-group ">
                        <label class="control-label col-sm-2 requiredField" for="DataInicial">
                            De:
                        </label>
                        <div class="col-sm-4">
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar">
                                    </i>
                                </div>
                                <input class="form-control" id="periodo" name="DataInicial" placeholder="dd/mm/aaaa" type="text" value="@dataInicial" />
                            </div>
                        </div>

                        <label class="control-label col-sm-2 requiredField" for="DataFinal">
                            Até:
                        </label>
                        <div class="col-sm-4">
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar">
                                    </i>
                                </div>
                                <input class="form-control" id="periodo" name="DataFinal" placeholder="dd/mm/aaaa" type="text" value="@dataFinal" />
                            </div>
                        </div>

                    </div>

                    <div class="form-group ">
                        <label class="control-label col-sm-2 requiredField">
                            Tipo:
                        </label>

                        <div class="col-sm-4">
                            <div class="input-group drop">

                                <div>
                                    <select asp-items="@ViewBag.TipoItem" name="TipoItem"
                                            id="filtro-tipo"
                                            class="selectpicker"
                                            data-style="btn btn-info btn-round select-with-transition dropdown-picker-selected"
                                            data-toggle="dropdown"></select>

                                </div>

                            </div>
                        </div>

                    </div>

                    <div class="form-group ">
                        <label class="control-label col-sm-2 requiredField">
                            Categoria:
                        </label>

                        <div class="col-sm-4">
                            <div class="input-group drop">
                                <div>
                                    <select asp-items="@ViewBag.Categoria" name="Categoria"
                                            id="filtro-categoria"
                                            class="selectpicker"
                                            data-style="btn btn-info btn-round select-with-transition dropdown-picker-selected"
                                            data-toggle="dropdown"></select>
                                </div>

                            </div>
                        </div>

                    </div>

                    <div class="form-group">
                        <label class="control-label col-sm-2 requiredField" for="dataInicial">
                            &nbsp;
                        </label>
                        <div class="col-sm-4">
                            <div class="input-group drop">
                                <div>
                                    <input type="submit" class="btn btn-primary" value="Filtrar" />
                                </div>
                            </div>
                        </div>
                    </div>

                </form>

            </div>
        </div>
    </div>
</div>


<div class="container">

    @{
        if (!string.IsNullOrWhiteSpace(Model.Criticas))
        {
            <div class="alert alert-warning alert-dismissible">
                <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                <strong>AVISO!</strong> @Model.Criticas
            </div>
        }
    }

    <div class="row">
        <hr />
    </div>

    <div class="row">

        <div class="col-md-12">


            <table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Tipo</th>
                        <th>Criação</th>
                        <th>Efetivação</th>
                        <th>Doador</th>
                        <th>Receptor</th>
                        <th>Título</th>
                        <th>Descrição</th>
                        <th>Categoria</th>
                        <th>Peso</th>
                        <th>Ger.RH</th>
                    </tr>
                </thead>
                <tbody>

                    @{
                        foreach (var item in Model.Itens)
                        {
                            <tr>
                                <td>@item.TipoItem</td>
                                <td>@item.DataInclusao.ToString("dd/MM/yyyy")</td>
                                <td>@(item.DataEfetivacao.HasValue ? item.DataEfetivacao.Value.ToString("dd/MM/yyyy") : string.Empty)</td>
                                <td>@item.Doador</td>
                                <td>@item.Receptor</td>
                                <td>@item.Titulo</td>
                                <td>@item.Descricao</td>
                                <td>@item.Descricao</td>
                                <td>@item.Peso</td>
                                <td>@(item.GerenciadaRh ? "Sim" : "Não")</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>

<div class="modal fade" id="edit" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title custom_align" id="Heading">Edit Your Detail</h4>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <input class="form-control " type="text" placeholder="Tiger Nixon">
                </div>
                <div class="form-group">

                    <input class="form-control " type="text" placeholder="System Architect">
                </div>
                <div class="form-group">


                    <input class="form-control " type="text" placeholder="Edinburgh">

                </div>
            </div>
            <div class="modal-footer ">
                <button type="button" class="btn btn-warning btn-lg" style="width: 100%;"><span class="glyphicon glyphicon-ok-sign"></span> Update</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>



<div class="modal fade" id="delete" tabindex="-1" role="dialog" aria-labelledby="edit" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title custom_align" id="Heading">Delete this entry</h4>
            </div>
            <div class="modal-body">

                <div class="alert alert-danger"><span class="glyphicon glyphicon-warning-sign"></span> Are you sure you want to delete this Record?</div>

            </div>
            <div class="modal-footer ">
                <button type="button" class="btn btn-success"><span class="glyphicon glyphicon-ok-sign"></span> Yes</button>
                <button type="button" class="btn btn-default" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> No</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

<script>
    $(document).ready(function () {
        var date_input = $('input[id="periodo"]'); //our date input has the name "date"
        var container = $('.bootstrap-iso form').length > 0 ? $('.bootstrap-iso form').parent() : "body";
        date_input.datepicker({
            format: 'dd/mm/yyyy',
            container: container,
            todayHighlight: true,
            autoclose: true,
            pickerPosition: 'bottom-left',
            language: 'pt-BR',
        });

    });

    $('#filtro-tipo').selectpicker({
        liveSearch: false,
        showTick: true,
        width: 'auto'
    });

    $('#filtro-categoria').selectpicker({
        liveSearch: false,
        showTick: true,
        width: 'auto'
    });

    $(document).ready(function () {
        $('#datatable').dataTable();

        $("[data-toggle=tooltip]").tooltip();

    });

    $('#datatable').DataTable({
        "language": {
            "sProcessing": "Procesando...",
            "sLengthMenu": "Mostrar _MENU_ registros",
            "sZeroRecords": "Nenhum resultado",
            "sEmptyTable": "Nenhum dado disponível para essa tabela",
            "sInfo": "Mostrando registros de _START_ até _END_ de um total de _TOTAL_ registros",
            "sInfoEmpty": "Mostrando registros de 0 à 0 de um total de 0 registros",
            "sInfoFiltered": "(filtrado de um total de _MAX_ registros)",
            "sInfoPostFix": "",
            "sSearch": "Buscar:",
            "sUrl": "",
            "sInfoThousands": ",",
            "sLoadingRecords": "Carregando...",
            "oPaginate": {
                "sFirst": "Primero",
                "sLast": "Último",
                "sNext": "Seguinte",
                "sPrevious": "Anterior"
            },
            "oAria": {
                "sSortAscending": ": Clique para ordenar de forma ascendente",
                "sSortDescending": ": Clique para odenar de forma descendente"
            }
        }
    });


</script>